<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] cid=%X{cid} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.commons.observability.web.CorrelationAndAccessLogFilter" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>